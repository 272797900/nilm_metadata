{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/meter.json",
    "title": "Meter",
    "description": "Metadata for a Meter",
    "type": "object",
    "properties": {
        "model": { "type": "string" },
        "manufacturer": { "type": "string" },
        "sample_period": {
            "description": "The sample period in seconds",
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        },
        "max_sample_period": {
            "description": "The maximum allowed sample period in seconds",
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        }, 
        "available_measurements": {
            "type": "array",
            "items": { "$ref": "measurement.json" },
            "minItems": 1,
            "uniqueItems": true
        },
        "measurement_limits": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "measurement": {"$ref": "measurement.json"},
                    "min": {"type": "number"},
                    "max": {"type": "number"}
                },
                "required": ["measurement", "min", "max"]
            }
        },
        "id": {
            "allOf": [
                { "$ref": "instance.json" },
                { "description": "The ID of this meter, unique within the building." }
            ]
        },
        "model": { "type": "string" },
        "manufacturer": { "type": "string" },
        "site_meter": {
            "type": "boolean",
            "description": "True if this meter measure the whole building."
        },
        "submeter_of": { 
            "type": "integer",
            "minimum": 0,
            "description": "Either the ID of the upstream meter, or if this meter is downstream of a site meter but the precise site meter is not known then use 0. "
        },
        "preprocessing_applied": {
            "type": "array",
            "items": {
                "enum": ["gaps_bookended_with_zeros", 
                         "implausable_values_removed"]
            }
        },
        "gap_free_segments": {
            "type": "array",
            "items": { "$ref": "timeframe.json" },
            "unique": true
        },
        "contiguous_segments": {
            "type": "array",
            "items": { "$ref": "timeframe.json" },
            "unique": true
        },
        "energy": {
            "type": "array",
            "items": {
                "allOf": [ 
                    { "$ref": "timeframe.json" },
                    { "properties": {
                        "active": { "type": "number" },
                        "reactive": { "type": "number" },
                        "apparent": { "type": "number" } }
                    }
                ]
            }
        },
        "room_id": { "$ref": "room.json" },
        "dates_active": {
            "type": "array",
            "items": { "$ref": "timeframe.json" }
        }
    },
    "additionalProperties": false
}
