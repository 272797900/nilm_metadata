{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/meter.json",
    "title": "Meter",
    "description": "Metadata for a Meter",
    "type": "object",
    "properties": {
        "id": {
            "allOf": [
                { "$ref": "instance.json" },
                { "description": "The ID of this meter, unique within the building." }
            ]
        },
        "sample_period": {
            "description": "The sample period in seconds",
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        },
        "max_sample_period": {
            "description": "The maximum allowed sample period in seconds",
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        }, 
        "manufacturer": { "type": "string" },
        "model": { "type": "string" },
        "available_measurements": {
            "type": "array",
            "items": { "$ref": "measurement.json" },
            "minItems": 1,
            "uniqueItems": true
        },
        "measurement_limits": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "measurement": {"$ref": "measurement.json"},
                    "min": {"type": "number"},
                    "max": {"type": "number"}
                },
                "required": ["measurement", "min", "max"]
            }
        },
        "upstream_of": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "oneOf": [
                            {"enum": ["meter"]},
                            {"$ref": "appliance.json#/properties/name"}
                            ]
                    },
                    "instance": { "$ref": "instance.json" }
                },
                "required": ["name", "instance"]
            },
            "uniqueItems": true
        },
        "downstream_of_meter": { "$ref": "instance.json" },
        "preprocessing_applied": {
            "type": "array",
            "items": {
                "enum": ["gaps_bookended_with_zeros", 
                         "implausable_values_removed"]
            }
        },
        "gap_free_segments": {
            "type": "array",
            "items": { "$ref": "timeframe.json" },
            "unique": true
        },
        "contiguous_segments": {
            "type": "array",
            "items": { "$ref": "timeframe.json" },
            "unique": true
        },
        "energy": {
            "type": "array",
            "items": {
                "allOf": [ 
                    { "$ref": "timeframe.json" },
                    { "properties": {
                        "active": { "type": "number" },
                        "reactive": { "type": "number" },
                        "apparent": { "type": "number" } }
                    }
                ]
            }
        },
        "room": { "$ref": "room.json" }
    },
    "required": ["id", "manufacturer", "model"],
    "additionalProperties": false
}
