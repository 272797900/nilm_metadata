{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/prior.json",
    "title": "Prior",
    "description": "Metadata for Priors",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "data": { 
            "type": "string",
            "description": "Normalised frequencies per discrete bin e.g. '0:0.1, 10:0.2, 20:0.3'.  The sum of frequencies must be <= 1."
        },
        "models": {
            "type": "array",
            "items": {
                "type": "object",
                "description": "use additional properties for the relevant parameters, favoring Greek letters spelt out in lowercase English e.g. 'mu' and 'lambda'",
                "properties": {
                    "distribution_name": { 
                        "enum": [ "normal", "inverse gaussian" ] }
                },
                "additionalProperties": true
            }
        },
        "num_datapoints": { "type": "integer" },
        "date_prepared": { "type": "string", "format": "date" },
        "subjective": { 
            "type": "boolean",
            "description": "Is this distribution a subjective estimate (guess)?"
        },
        "software": { 
            "type": "object",
            "description": "the software used to generate the prior",
            "properties": {
                "name": { "type": "string" },
                "version": { "type": "string" }
            }
        },
        "training_data": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "dataset": { "type": "string" },
                    "buildings": { 
                        "type": "array", 
                        "items": { 
                            "type": "object",
                            "properties": {
                                "building_id": { "type": "integer" },
                                "dates": { 
                                    "type": "array",
                                    "items": { "$ref": "timeframe.json" }
                                },
                                "country": { "type": "string" }
                            }
                        }
                    }
                }
            }
        }
    }
}
