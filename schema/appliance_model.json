{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "__id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/model_parameters.json",
    "title": "Parameters for Appliance Models",
    "type": "object",
    "properties": {
        "appliance": { "type": "string", "description": "the parent appliance" },
        "model_type": {
            "type": { "enum": ["HMM", "FHMM", "combinatorial optimisation"] },
        },
        "training_data": { "$ref": "prior.json#/properties/training_data" },
        "specific_to": { "$ref": "prior.json#/properties/specific_to" },
        "software": { "$ref": "device.json" },
        "related_documents": { "type": "array", "items": { "type": "string" } },
        "date_prepared": { "type": "string", "format": "date" },
        "description": { "type": "string" },
        "parameters": {
            "type": "object"
        }
    }
}
