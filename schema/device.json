{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/device.json",
    "title": "Device",
    "description": "Metadata for an Device (a generalisation of an appliance and meter)",
    "type": "object",
    "properties": {
        "name": { "type": "string" },
        "model": { "type": "string" },
        "model_url": { "type": "string" },
        "manufacturer": { "type": "string" },
        "seller": { "type": "string" },
        "brand": { "type": "string" },
        "brand_url": { "type": "string" },
        "parent": { "type": "string" },
        "original_name": { "type": "string" },
        "images": { 
            "type": "array", 
            "items": { "type": "string", "format": "uri" } 
        },
        "dates_active": {
            "type": "array",
            "items": { "$ref": "timeframe.json" }
        },
        "description": { "type": "string" },
        "room": { "$ref": "room.json" },
        "year_of_purchase": { "type": "integer" },
        "year_of_manufacture": { "type": "integer" },
        "model": { "type": "string" },
        "brand": { "type": "string" },
        "subtype": { "type": "string" },
        "part_number": { "type": "string" },
        "gtin": { 
            "type": "integer", 
            "description": "http://en.wikipedia.org/wiki/Global_Trade_Item_Number" 
        },
        "version": { "type": "string" }
    }
}
