{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/building.json",
    "title": "Building",
    "description": "Represent a physical building",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "dataset": { "type": "string" },
        "name": { "type": "string", "description": "name used in dataset" },
        "original_name": { 
            "type": "string", 
            "desciption": "The original name for this building from the original dataset"
        },
        "geo_location": {
            "type": "object",
            "properties": {
                "country": { "type": "string" }, 
                "city_or_town": {"type": "string" },
                "latitude": { "type": "number" },
                "longitude": { "type": "number" }
            }
        },
        "timezone": { "type": "string" },
        "rooms": { "type": "array", "items": { "$ref": "room.json" } },
        "n_occupants": { 
            "type": "integer",
            "description": "max number of occupants"
        },
        "periods_unoccupied": {
            "type": "array",
            "items": "timeframe.json",
            "description": "Periods when this building was empty for more than a day (e.g. holidays)"
        },
        "utilities": {
            "type": "object",
            "properties": {
                "electric": { "$ref": "electric.json" }
            }
        }
    }
}
