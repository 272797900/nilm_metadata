{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "__id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/building.json",
    "title": "Building",
    "description": "Represent a physical building",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "dataset": { "type": "string" },
        "name": { "type": "string", "description": "name used in dataset" },
        "original_name": { 
            "type": "string", 
            "desciption": "The original name for this building from the original dataset"
        },
        "geo_location": {
            "type": "object",
            "properties": {
                "country": { 
                    "type": "string",
                    "description": "Use the short country name listed at http://en.wikipedia.org/wiki/List_of_countries_by_name; e.g. United Kingdom or United States."
                }, 
                "locality": {
                    "type": "string",
                    "description": "village, town or city"
                },
                "latitude": { "type": "number" },
                "longitude": { "type": "number" }
            },
            "additionalProperties": false
        },
        "timezone": { "type": "string" },
        "rooms": { "type": "array", "items": { "$ref": "room.json" } },
        "n_occupants": { 
            "type": "integer",
            "description": "max number of occupants"
        },
        "timeframe": { "$ref": "timeframe.json" },
        "periods_unoccupied": {
            "type": "array",
            "items": { "$ref": "timeframe.json"},
            "description": "Periods when this building was empty for more than a day (e.g. holidays)"
        },
        "utilities": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "electric": { "$ref": "electric.json" },
                "water": { "type": "object" },
                "gas": { "type": "object" }
            }
        }
    }
}
