{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "__id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/building.json",
    "title": "Building",
    "description": "Represent a physical building",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "dataset": { "type": "string", "description": "dataset short title" },
        "id": { "type": "integer", "description": "identifier used in dataset" },
        "original_name": { 
            "type": "string", 
            "desciption": "The original name for this building from the original dataset"
        },
        "geo_location": {
            "type": "object",
            "properties": {
                "country": { 
                    "type": "string",
                    "description": "Please use a standard two-letter country code defined by ISO 3166-1 alpha-2. e.g. 'GB' or 'US'.  http://en.wikipedia.org/wiki/ISO_3166-1_alpha-2"
                }, 
                "locality": {
                    "type": "string",
                    "description": "village, town or city"
                },
                "latitude": { "type": "number" },
                "longitude": { "type": "number" }
            },
            "additionalProperties": false
        },
        "timezone": { 
            "type": "string",
            "description": "Please use the standard TZ name from the IANA (aka Olson) Time Zone Database e.g. America/New_York or Europe/London.  See http://en.wikipedia.org/wiki/List_of_tz_database_time_zones"
        },
        "rooms": { "type": "array", "items": { "$ref": "room.json" } },
        "n_occupants": { 
            "type": "integer",
            "description": "max number of occupants"
        },
        "temporal_coverage": { "$ref": "timeframe.json" },
        "periods_unoccupied": {
            "type": "array",
            "items": { "$ref": "timeframe.json"},
            "description": "Periods when this building was empty for more than a day (e.g. holidays)"
        },
        "utilities": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "electric": { "$ref": "electric.json" },
                "water": { "type": "object" },
                "gas": { "type": "object" }
            }
        }
    }
}
