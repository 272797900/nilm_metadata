{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/dataset.json",
    "title": "Dataset",
    "description": "Metadata for a dataset",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "description": "Full name of the dataset, eg. 'Reference Energy Disaggregation Data Set'"
        },
        "short_title": { 
            "type": "string",
            "description": "Abbreviated name for the dataset, e.g. 'REDD'"
        },
        "DOI": {
            "type": "string",
            "description": "A digital object identifier for the dataset"
        },
        "creators": {
            "type": "array",
            "items": {
                "type": "string",
                "description": "<Lastname>, <Firstname>"
            }
        },
        "publication_date": { "type": "string" },
        "rights_list": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "uri": { "type": "string" },
                    "name": { "type": "string" }
                }
            },
            "description": "License(s) under which this dataset is released."
        },
        "version": { "type": "string" },
        "urls": {
            "type": "array",
            "description": "The URL(s) for more information about this dataset",
            "items": {
                "type": "string"
            }
        },
        "bibliography": {
            "type": "array",
            "description": "Academic references about this dataset",
            "items": {
                "type": "string"
            }
        },
        "contact": { "type": "string" },
        "institution": { "type": "string" },
        "description": { "type": "string" },
        "number_of_buildings": { "$ref": "instance.json" },
        "mains_voltage": { "$ref": "electric.json#/properties/mains_voltage" },
        "geo_location": { "$ref": "building.json#/properties/geo_location" },
        "timezone": { "$ref": "building.json#/properties/timezone" },
        "buildings": {
            "type": "object",
            "additionalProperties": { "$ref": "building.json" },
            "description": "key is the building instance, starting from 1."
        },
        "schema": { 
            "type": "string",
            "description": "The URL of the NILM_metadata version (tag) against which this metadata is validated. e.g. https://github.com/nilmtk/nilm_metadata/tree/v0.1.0"
        }
    },
    "additionalProperties": false
}
