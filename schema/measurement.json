{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilmschema/master/schema/measurement.json",
    "title": "Measurement",
    "type": "object",
    "properties": {
        "physical_quantity": {
            "enum": ["power", "energy", "voltage"]
         },
        "type": {
            "enum": ["active", "reactive", "apparent"]
        },
        "cummulative": {
            "type": "boolean"
        }
    },
    "required": ["physical_quantity"],
    "additionalProperties": false
}
