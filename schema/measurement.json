{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/measurement.json",
    "title": "Measurement",
    "type": "object",
    "properties": {
        "physical_quantity": {
            "enum": ["power", "energy", "voltage"]
         },
        "type": {
            "enum": ["active", "reactive", "apparent"]
        },
        "cummulative": {
            "type": "boolean"
        },
        "minimum": { "type": "number" },
        "maximum": { "type": "number" },
        "description": { "type": "string" }
    },
    "required": ["physical_quantity"],
    "additionalProperties": false
}
