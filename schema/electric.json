{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/electric.json",
    "title": "Electric",
    "description": "Represent the electricity system of a building",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "meters": { 
            "type": "object",
            "additionalProperties": { "$ref": "meter.json" }
        },
        "appliances": { 
            "type": "object"
        },
        "nominal_voltage": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true,
            "description": "nominal mains voltage"
        }
    }
}
