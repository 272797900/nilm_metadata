{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/electric.json",
    "title": "Electric",
    "description": "Represent the electricity system of a building",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "type": "object",
        "properties": {
            "meters": { 
                "type": "array", 
                "items": { "$ref": "meter.json" },
                "unique": true 
            },
            "appliances": { 
                "type": "array", 
                "items": { "$ref": "appliance.json" },
                "unique": true 
            },
            "nominal_mains_voltage": {
                "type": "number",
                "minimum": 0,
                "exclusiveMinimum": true
            }
        }
    }
}
