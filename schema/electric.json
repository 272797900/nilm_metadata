{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "__id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/electric.json",
    "title": "Electric",
    "description": "Represent the electricity system of a building",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "meters": { 
            "type": "array",
            "items": { "$ref": "meter.json" }
        },
        "appliances": { 
            "type": "array",
            "items": { "type": "object" }
        },
        "mains_voltage": {
            "type": "object",
            "properties": {
                "nominal": {
                    "type": "number",
                    "minimum": 0,
                    "exclusiveMinimum": true,
                    "description": "nominal mains voltage"
                },
                "tolerance_upper_bound": {
                    "type": "number",
                    "description": "percentage.  e.g. 10 for +10%. Optional."
                },
                "tolerance_lower_bound": {
                    "type": "number",
                    "description": "percentage.  e.g. 10 for -10%. Optional."
                }
            }
        }
    }
}
