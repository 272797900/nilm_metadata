{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.github.com/nilmtk/nilm_metadata/master/schema/meter_instance.json",
    "title": "Meter Instance",
    "description": "Metadata for a Meter instance",
    "type": "object",
    "properties": {
        "id": {
            "allOf": [
                { "$ref": "instance.json" },
                { "description": "The ID of this meter, unique within the building." }
            ]
        },
        "model": { "type": "string" },
        "manufacturer": { "type": "string" },
        "site_meter": {
            "type": "boolean",
            "description": "True if this meter measure the whole building."
        },
        "submeter_of": { 
            "type": "integer",
            "minimum": 0,
            "description": "Either the ID of the upstream meter, or if this meter is downstream of a site meter but the precise site meter is not known then use 0. "
        },
        "preprocessing_applied": {
            "type": "array",
            "items": {
                "enum": ["gaps_bookended_with_zeros", 
                         "implausable_values_removed"]
            }
        },
        "gap_free_segments": {
            "type": "array",
            "items": { "$ref": "timeframe.json" },
            "unique": true
        },
        "contiguous_segments": {
            "type": "array",
            "items": { "$ref": "timeframe.json" },
            "unique": true
        },
        "energy": {
            "type": "array",
            "items": {
                "allOf": [ 
                    { "$ref": "timeframe.json" },
                    { "properties": {
                        "active": { "type": "number" },
                        "reactive": { "type": "number" },
                        "apparent": { "type": "number" } }
                    }
                ]
            }
        },
        "room_id": { "$ref": "room.json" },
        "dates_active": {
            "type": "array",
            "items": { "$ref": "timeframe.json" }
        }
    },
    "required": ["id", "manufacturer", "model"],
    "additionalProperties": false
}
